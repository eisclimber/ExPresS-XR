<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="True">
    <ui:VisualElement name="step-7-setup-quiz-logic" style="flex-grow: 1;">
        <ui:Label text="Setup Quiz Logic..." display-tooltip-when-elided="true" name="step-header" style="flex-direction: row; flex-grow: 0; height: auto; font-size: 20px; -unity-text-align: upper-center; flex-shrink: 1; -unity-font-style: bold; min-height: initial;" />
        <ui:VisualElement name="description" style="flex-grow: 0; margin-left: 10px;">
            <ui:Label text="Next we will populate the dataset and choose which feedback we want to give. Drag a Video Clip into the Object field to mark them as to be played as question or answer. Optionally you can enter a text thatwill be displayed when the clip plays. You can create a new question by pressing the plus-sign below. In the end you can choose how the feedback should be given: Always the correct, always the answer to the other option, a random answer or none." display-tooltip-when-elided="true" name="choice-1-description" style="white-space: normal; flex-grow: 0; border-bottom-width: 20px; min-width: auto; min-height: initial;" />
        </ui:VisualElement>
        <ui:VisualElement name="header" style="flex-direction: row;">
            <ui:Label text="Questions" display-tooltip-when-elided="true" name="question-label" style="margin-left: 10px; flex-grow: 1; -unity-font-style: bold;" />
            <ui:Label text="Answers" display-tooltip-when-elided="true" name="answer-label" style="margin-left: 0; flex-grow: 1; -unity-font-style: bold;" />
            <ui:Label text="Correct?" display-tooltip-when-elided="true" name="correct-label" style="width: 75px; min-width: 75px; margin-right: 20px; -unity-text-align: middle-center; -unity-font-style: bold;" />
        </ui:VisualElement>
        <ui:ScrollView scroll-deceleration-rate="0,135" elasticity="0,1" show-vertical-scroller="true" name="questions" style="margin-left: 10px; margin-right: 10px; margin-top: 10px; flex-grow: 1; background-color: rgb(51, 51, 51); height: 200px;" />
