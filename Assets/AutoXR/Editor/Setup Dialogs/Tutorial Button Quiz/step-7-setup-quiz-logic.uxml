            <ui:Button text="+" display-tooltip-when-elided="true" name="add-item-button" style="flex-direction: row-reverse; width: 24px; height: 24px;" />
            <ui:Button text="-" display-tooltip-when-elided="true" name="remove-item-button" style="flex-direction: row-reverse; width: 24px; height: 24px;" />
        </ui:VisualElement>
        <ui:VisualElement name="controls-view" style="flex-direction: row; justify-content: flex-end; min-height: initial;">
            <ui:Label text="Setup failed. Be sure to fill in every question!" display-tooltip-when-elided="true" name="questions-failure-label" style="flex-grow: 1; margin-right: 0; margin-left: 0; color: rgb(255, 0, 0); -unity-font-style: bold; -unity-text-align: upper-center; display: none;" />
